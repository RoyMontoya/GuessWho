<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/button_pressed_color"/>

            <stroke
                android:width="3dp"
                android:color="@color/stroke_color" />


        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/button_color"
                android:endColor="@color/bottom_button_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/stroke_color" />


        </shape>
    </item>
</selector>